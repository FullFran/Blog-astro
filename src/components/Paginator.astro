---
const { page } = Astro.props
---
<div class="page__actions">
    {page.url.prev && (
        <a class="action__go-to-x"
           href={page.url.prev}
           title="Página anterior">
           &larr; Anterior
        </a>
    )}
    {page.url.next && (
        <a class="action__go-to-x"
           href={page.url.next}
           title="Página siguiente">
           Siguiente &rarr;
        </a>
    )}
</div>
<style>
    .page__actions {
        @apply flex justify-center md:justify-end py-6 gap-2;
    }
    .action__go-to-x {
        @apply text-base uppercase font-bold text-cyan-700 dark:text-cyan-300 hover:underline hover:text-cyan-900 dark:hover:text-cyan-100 transition;
    }
</style>
